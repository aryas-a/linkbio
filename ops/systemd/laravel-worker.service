[Unit]
Description=Laravel Queue Worker
After=network.target

[Service]
User=www-data
Group=www-data
Restart=always
ExecStart=/usr/bin/php /var/www/app/artisan queue:work redis --sleep=1 --tries=3 --max-time=3600 --queue=default
StandardOutput=append:/var/log/laravel/queue-worker.log
StandardError=append:/var/log/laravel/queue-worker-error.log
Environment=APP_ENV=production APP_DEBUG=false
WorkingDirectory=/var/www/app

[Install]
WantedBy=multi-user.target
